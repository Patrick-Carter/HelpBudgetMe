@model HelpBudgetMe.Models.Want

@{
    ViewData["Title"] = "Delete Want";
}

<main class="pagestart">
    <form class="flex_column-center" method="post" asp-controller="Want" asp-action="DeleteWant">
        <h1 class="signing_title">Delete Want</h1>
        <div>
            <label asp-for="Name"></label>
            <input readonly value="@Model.Name" asp-for="Name" />
        </div>
        <div>
            <label asp-for="Amount"></label>
            <input readonly value="@Model.Amount" asp-for="Amount" />
        </div>
        <input value="@Model.Id" asp-for="Id" hidden />
        <input value="@Model.DateCreated" asp-for="DateCreated" hidden />
        <button class="btn btn-action" type="submit">Delete</button>
    </form>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
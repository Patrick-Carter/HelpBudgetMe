@model HelpBudgetMe.Models.ViewModels.WantsViewModel

@{
    ViewData["Title"] = "Wants";
}


<main>
    <h2 class="dashboard_headline pagestart">Wants</h2>
    <h5 class="expenseType_amount">Budgeted For Wants: <strong>$@Model.BudgetedForWants</strong></h5>
    <div class="expenseType_actions">
        <a class="btn btn-action" asp-controller="Want" asp-action="AddWant">Add</a>
        <a class="btn btn-action" asp-controller="Transfer" asp-action="Index">Transfer</a>
    </div>

    @if (Model.Wants.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Wants)
                {
                    <tr>
                        <td data-heading="Name">@item.Name</td>
                        <td data-heading="Amount">$@item.Amount</td>
                        <td data-heading="Date">@item.DateCreated.ToShortDateString()</td>
                        <td data-heading="Actions">
                            <a class="table_actions" asp-controller="Want" asp-action="EditWant" asp-route-Id="@item.Id">Edit</a>
                            <a class="danger table_actions" asp-controller="Want" asp-action="DeleteWants" asp-route-Id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <p class="clickable_link pagebottom">Load More</p>
    }
    else
    {
        <h2 class="expenseType_none">You haven't added any wants yet.</h2>
    }
</main>
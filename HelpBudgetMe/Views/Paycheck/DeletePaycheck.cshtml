@model HelpBudgetMe.Models.Paycheck

@{
    ViewData["Title"] = "Delete Paycheck";
}


<main class="pagestart">
    <form class="signing" method="post" asp-controller="Paycheck" asp-action="DeletePaycheck">
        <h1 class="signing_title">Delete Paycheck</h1>
        <div>
            <label asp-for="Name"></label>
            <input readonly value="@Model.Name" asp-for="Name" />
        </div>
        <div>
            <label asp-for="Amount"></label>
            <input readonly value="@Model.Amount" asp-for="Amount" />
        </div>
        <input value="@Model.Id" asp-for="Id" hidden />
        <input value="@Model.DateCreated" asp-for="DateCreated" hidden />
        <button class="btn btn-action" type="submit">Delete</button>
    </form>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model HelpBudgetMe.Models.Saving

@{
    ViewData["Title"] = "Delete Savings";
}

<main class="pagestart">
    <form class="signing" method="post" asp-controller="Saving" asp-action="DeleteSaving">
        <h1 class="signing_title">Delete Saving</h1>
        <div>
            <label asp-for="Name"></label>
            <input readonly value="@Model.Name" asp-for="Name" />
        </div>
        <div>
            <label asp-for="Amount"></label>
            <input readonly value="@Model.Amount" asp-for="Amount" />
        </div>
        <input value="@Model.Id" asp-for="Id" hidden />
        <input value="@Model.DateCreated" asp-for="DateCreated" hidden />
        <button class="btn btn-action" type="submit">Delete</button>
    </form>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model HelpBudgetMe.Models.ViewModels.AddViewModel

@{
    ViewData["Title"] = "Spend Savings";
}


<main class="pagestart">
    <form class="flex_column-center" method="post" asp-controller="Saving" asp-action="AddSaving">
        <h1 class="signing_title">Spend Savings</h1>
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span class="validationError danger" asp-validation-for="Name"></span>
        </div>
        <div>
            <label asp-for="Amount"></label>
            <input asp-for="Amount" />
            <span class="validationError danger" asp-validation-for="Amount"></span>
        </div>
        <div>
            <button class="btn btn-action" type="submit">Spend</button>
        </div>
    </form>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
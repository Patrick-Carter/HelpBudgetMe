@model HelpBudgetMe.Models.Need

@{
    ViewData["Title"] = "Delete Need";
}

<main>
    <h1>Delete Paycheck</h1>
    <form method="post" asp-controller="Need" asp-action="DeleteNeed">
        <div>
            <label asp-for="Name"></label>
            <input value="@Model.Name" asp-for="Name" />
        </div>
        <div>
            <label asp-for="Amount"></label>
            <input value="@Model.Amount" asp-for="Amount" />
        </div>
        <input value="@Model.Id" asp-for="Id" hidden />
        <input value="@Model.DateCreated" asp-for="DateCreated" hidden />
        <button type="submit">Delete</button>
    </form>
</main>
@model HelpBudgetMe.Models.ViewModels.TransferViewModel

@{
    ViewData["Title"] = "Transfer";
}
<main class="pagestart">
    <h1>Transfer From Needs</h1>
    <h5 class="expenseType_amount">Budgeted for Needs: <strong>$@Model.BudgetedForNeeds</strong></h5>
    <form method="post" asp-controller="Need" asp-action="TransferFromNeeds">
        <div>
            <h2>Transfer To Wants</h2>
            <label asp-for="@Model.TransferToWants"></label>
            <input value="@Model.TransferToWants" asp-for="TransferToWants" />
            <span asp-validation-for="TransferToWants"></span>
        </div>
        <div>
            <h2>Transfer To Savings</h2>
            <label asp-for="@Model.TransferToSavings"></label>
            <input value="@Model.TransferToSavings" asp-for="TransferToSavings" />
            <span asp-validation-for="TransferToSavings"></span>
        </div>
        <button type="submit">Transfer</button>
    </form>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}